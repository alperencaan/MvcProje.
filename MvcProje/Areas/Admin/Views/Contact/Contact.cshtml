@using Model.ViewModels
@model AuthenticationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Page</title>
    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Lato', sans-serif;
        }

        .contact-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
        }

        .contact-header p {
            color: #6c757d;
        }

        .contact-card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 2px 12px rgba(0,0,0,0.07);
            margin-bottom: 1.5rem;
        }

            .contact-card .card-body {
                padding: 1.5rem 2rem;
            }

        .contact-date {
            font-size: 0.95rem;
            color: #888;
            text-align: right;
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.15);
        }

        .btn-send {
            font-weight: bold;
            letter-spacing: 1px;
            border-radius: 2rem;
            padding: 0.5rem 2rem;
        }
    </style>
</head>
<body>
    <section class="container py-5" id="contact">
        <div class="contact-header text-center mb-5">
            <h2><i class="fas fa-envelope-open-text text-primary"></i> Contact</h2>
            <p><i>contact me</i></p>
        </div>

        <!-- Contact Messages -->
        @foreach (var contact in Model.Contacts)
        {
            <div class="card contact-card">
                <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                    <div>
                        <h5 class="mb-1"><i class="fas fa-user-circle text-secondary"></i> @contact.UserName</h5>
                        <div><strong><i class="fas fa-envelope"></i> E-Mail:</strong> @contact.Mail</div>
                        <div><strong><i class="fas fa-tag"></i> Subject:</strong> @contact.Subject</div>
                        <div><strong><i class="fas fa-comment-dots"></i> Message:</strong> @contact.Message</div>
                    </div>
                    <div class="contact-date mt-3 mt-md-0">
                        <i class="fas fa-calendar-alt"></i> @contact.Date.ToString("dd.MM.yyyy HH:mm")
                    </div>
                </div>
            </div>
        }

        <!-- Contact Form -->
        <div class="card contact-card mt-4">
            <div class="card-body">
                <form action="@Url.Action("SubmitContact", "Home")" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Name" required name="UserName" />
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" type="email" placeholder="Email" required name="Mail" />
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Subject" required name="Subject" />
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" placeholder="Message" required name="Message" rows="5"></textarea>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary btn-send" type="submit">
                            <i class="fas fa-paper-plane"></i> SEND
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
</html>