@using Model.ViewModels
@model AuthenticationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background-color: #343a40;
            padding-top: 1rem;
        }

            .sidebar a {
                color: #ffffff;
                text-decoration: none;
                display: block;
                padding: 10px 20px;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            margin-left: 250px;
            padding: 2rem;
        }

        .navbar {
            margin-left: 250px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-white text-center">Admin Panel</h4>
        <a href="#">Dashboard</a>
        <a href="#">Kullanıcılar</a>
        <a href="#">Yorumlar</a>
        <a href="#">Ayarlar</a>
        <a href="#">Çıkış</a>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Panel</a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <!-- Content -->
    <div class="content">
        <h1>Hoşgeldiniz!</h1>
        <p>Buradan içeriklerinizi yönetebilirsiniz.</p>

        <div class="row">
            <div class="col-md-4">
                <div class="card text-bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Kullanıcılar</h5>
                        <p class="card-text">Toplam 150 kullanıcı</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Yorumlar</h5>
                        <p class="card-text">Son 24 saatte 35 yorum</p>
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <!-- Hakkımda Bölümü -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">Hakkımda</div>
            <div class="card-body">
                <p>Hakkımda bilgilerini buradan güncelleyebilirsiniz.</p>
                <a href="/Admin/Admin/AboutEdit" class="btn btn-outline-info">Hakkımda Güncelle</a>
            </div>
        </div>

        <!-- Deneyimler Bölümü -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">Deneyimler</div>
            <div class="card-body">
                <a href="/Admin/Experience/Create" class="btn btn-success mb-2">Deneyim Ekle</a>
                <a href="/Admin/Experience/Index" class="btn btn-secondary mb-2">Tüm Deneyimler</a>
            </div>
        </div>

        <!-- Eğitimler Bölümü -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">Eğitimler</div>
            <div class="card-body">
                <a href="/Admin/Education/Create" class="btn btn-success mb-2">Eğitim Ekle</a>
                <a href="/Admin/Education/Index" class="btn btn-secondary mb-2">Tüm Eğitimler</a>
            </div>
        </div>

        <!-- Sertifikalar Bölümü -->
        <div class="card mb-4">
            <div class="card-header bg-dark text-white">Sertifikalar</div>
            <div class="card-body">
                <a href="/Admin/Certificate/Create" class="btn btn-success mb-2">Sertifika Ekle</a>
                <a href="/Admin/Certificate/Index" class="btn btn-secondary mb-2">Tüm Sertifikalar</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
